<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.krakenapps</groupId>
		<artifactId>kraken-infra-pom</artifactId>
		<version>1.0.0</version>
	</parent>
	<artifactId>kraken-dom</artifactId>
	<version>2.13.0</version>
	<packaging>bundle</packaging>
	<name>Kraken DOM</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>org.krakenapps.dom</Bundle-SymbolicName>
						<Export-Package>
							org.krakenapps.dom.api;version=${project.version},
							org.krakenapps.dom.model;version=${project.version},
							org.krakenapps.dom.model.windows;version=${project.version}
						</Export-Package>
						<Private-Package>
							org.krakenapps.dom.api.impl,
							org.krakenapps.dom.script,
							org.krakenapps.dom.msgbus
						</Private-Package>
						<Import-Package>
							org.krakenapps.msgbus;version="1.5.2",
							org.krakenapps.confdb;version="0.10.0",
							*
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-ipojo-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>ipojo-bundle</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.ipojo.annotations</artifactId>
		</dependency>
		<dependency>
			<groupId>org.krakenapps</groupId>
			<artifactId>kraken-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.krakenapps</groupId>
			<artifactId>kraken-confdb</artifactId>
		</dependency>
		<dependency>
			<groupId>org.krakenapps</groupId>
			<artifactId>kraken-msgbus</artifactId>
		</dependency>
	</dependencies>
</project>
